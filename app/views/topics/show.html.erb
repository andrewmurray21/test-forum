<% if logged_in? %>

<% provide(:title, "#{Topic.find(params[:id]).title}") %>

<div class="container-fluid">
  <ol class="breadcrumb">
    <li><%= link_to "Home", root_path %></li>
    <li><%= link_to truncate(Topic.find(params[:id]).forum.title, :length => 30),
      "../forums/#{Topic.find(params[:id]).forum.id}" %></li>
    <li><%= link_to truncate(Topic.find(params[:id]).title, :length => 30),
      "../topics/#{params[:id]}" %></li>
  </ol>
  <div class="custom_pagination">
    <%= will_paginate @posts, :inner_window => 1, :outer_window => 0  %>
  </div>
  <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th class="col-md-2">Author</th>
            <th class="col-md-10">Post</th>
          </tr>
        </thead>
        <tbody>
          <%= render 'topic_posts' %>
        </tbody>
      </table>
  </div>
</div>
    <div class="col-md-6">
        <%= render 'shared/post_form' %>
    </div>
    <div class="custom_pagination">
      <%= will_paginate @posts, :inner_window => 1, :outer_window => 0  %>
    </div>



<% end %>
