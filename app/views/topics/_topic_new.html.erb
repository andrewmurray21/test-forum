<%= form_for(@topic) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>

  <%= f.label "Post" %>
  <%= f.text_area :first_post_content, placeholder: "Compose first post...", class: 'form-control' %>

  <%= f.hidden_field :forum_id, :value => @forum_id %>

<%= f.submit "Create Topic", class: "btn btn-primary", data: { disable_with: 'Submitting...' } %>
<% end %>
