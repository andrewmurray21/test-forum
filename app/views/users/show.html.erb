<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <h5>
        <%= @user.email %>
      </h5>
      <h7>
        <%= link_to "Update Profile", edit_user_path(current_user) %>
      <h7>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts, :inner_window => 1, :outer_window => 0 %>
    <% end %>
  </div>
</div>
