<%= form_for(@posts_form) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new post..." %>
    <%= f.hidden_field :topic_id, :value => @post_topic %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
