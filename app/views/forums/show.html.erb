<% if logged_in? %>
<% provide(:title, "#{Forum.find(params[:id]).title}") %>

<div class="container-fluid">
  <ol class="breadcrumb">
    <li><%= link_to "Home", root_path %></li>
    <li><%= link_to Forum.find(params[:id]).title,
      "../forums/#{params[:id]}" %></li>
  </ol>
    <%= link_to "Create a new topic!", "../forums/#{params[:id]}/topics/new", 
      class: "btn btn-lg btn-primary" %>
  <div class="custom_pagination">
    <%= will_paginate @forum_ids %>
  </div>
  <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th class="col-md-8">Topic</th>
            <th class="col-md-4">Latest</th>
          </tr>
        </thead>
        <tbody>
          <%= render 'forum_topics' %>
        </tbody>
      </table>
  </div>
  <div class="custom_pagination">
    <%= will_paginate @forum_ids %>
  </div>
</div>


<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Test Forum</h1>

    <h2>
      This is the home page
    </h2>

      <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>

  </div>

   <%= link_to image_tag("orangutan_with_baby.jpg", alt: "Test Forum"),
            'http://www.google.com/' %>
<% end %>

