<div class="container-fluid" style="background-color:#428BCA;color:#fff;height:80px;">
  <h1>TEST FORUM</h1>
</div>

<nav class="navbar navbar-inverse" data-spy="affix" data-offset-top="79" id="fixedNav">
  <div class="container-fluid">
      <ul class="nav navbar-nav navbar-left">
        <li>
          <%= link_to root_path do %>
            <span class="glyphicon glyphicon-home" style="color:#fff;"></span>
            <span>Home</span>
          <% end %>
        <li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= gravatar_for(current_user, size: 20) %>
              <%= current_user.name %> 
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <% if current_user.admin? %>
                <li><%= link_to "Users", users_path %></li>
              <% end %>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
  </div>
</nav>

<!-- Workaround for navbar not being fixed on page refresh/following a link -->
<script>
  $(document).ready(function(){
    $("#fixedNav").affix({offset: {top: 79} }); 
  });
</script>
